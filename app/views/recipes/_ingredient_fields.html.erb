      <%= puts "louis randall the params for the ingredients from the edit side: #{params.inspect}" %>
  <% if action == "edit" %>
    <%  f.object.recipe_ingredients.each do |recipe_ingredient| %>
      <%= select_tag 'Ingredient', options_for_select(Ingredient.all.collect{ |u| [u.name, u.id.to_s]}, recipe_ingredient.ingredient_id), include_blank: true, multiple: true %>
